<article class="hentry activity vcard column span-24">
  <div class="span-3 meta">
    <img class="photo"
         src="/images<%= activity.avatar %>"
         alt="<%= activity.activity_noun %>'s profile picture from
              <%= activity.activity_indirect_object_bookmark.gsub(/http:\/\//, "") %>" />
    <a class="nickname" href="<%= activity.author_bookmark %>" rel="bookmark"><%= activity.nickname %></a>
    <abbr class="updated published" title="<%= activity.created_at %>">
      <%= time_ago_in_words(activity.created_at).capitalize %> ago
    </abbr>
  </div><!-- .meta -->

  <div class="span-21 last">
    <h3 class="entry-title">
      <span class="author activity-noun">
        <span class="fn"><%= activity.activity_noun %></span>
      </span>

      <a href="<%= activity.activity_object_bookmark %>" rel="bookmark">
        <span class="activity-verb"><%= activity.activity_verb %></span>
        a
        <span class="activity-object"><%= activity.activity_object %></span>
      </a>
      to
      <a href="<%= activity.activity_indirect_object_bookmark %>" rel="bookmark">
        <span class="activity-indirect-object"><%= activity.activity_indirect_object %></span>
      </a>
    </h3><!-- .entry-title -->

    <div class="entry-content">
      <%= activity.entry_content %>
    </div><!-- .entry-content -->
  </div><!-- . -->

</article><!-- .hentry.activity -->
